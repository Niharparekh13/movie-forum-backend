{
  "name": "movie-forum-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",

    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",

    "test": "set NODE_OPTIONS=--experimental-vm-modules&& jest --runInBand --config jest.config.cjs",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules&& jest --watch --config jest.config.cjs",
    "test:coverage": "set NODE_OPTIONS=--experimental-vm-modules&& jest --coverage --runInBand --config jest.config.cjs",

    "generate": "prisma generate",
    "prepare": "prisma generate",
    "migrate": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset --force",
    "seed": "tsx prisma/seed.ts",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:seed": "prisma db seed",
    "db:reset": "npm run migrate:reset && npm run seed",

    "verify": "npm run typecheck && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.9.2",
    "@types/supertest": "^2.0.16",
    "eslint": "^9.11.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}

